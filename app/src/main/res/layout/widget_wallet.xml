<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/widget_wallet_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1C1C1E"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Header: logo + balance info -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/wallet_logo"
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:layout_marginEnd="10dp"
            android:src="@drawable/monero_logo"
            android:scaleType="centerCrop"
            android:importantForAccessibility="no" />

        <!-- Left: Balance -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/wallet_xmr"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0.0000"
                android:textColor="@android:color/white"
                android:textSize="20sp"
                android:textStyle="bold"
                android:maxLines="1" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="XMR"
                    android:textColor="#8E8E93"
                    android:textSize="11sp" />

                <TextView
                    android:id="@+id/wallet_fiat_dot"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="4dp"
                    android:text="Â·"
                    android:textColor="#8E8E93"
                    android:textSize="11sp"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/wallet_fiat"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#8E8E93"
                    android:textSize="11sp"
                    android:visibility="gone" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <!-- Divider -->
    <ImageView
        android:id="@+id/wallet_divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginVertical="10dp"
        android:background="#38383A"
        android:importantForAccessibility="no" />

    <!-- Transaction rows -->
    <!-- Row 1 -->
    <LinearLayout
        android:id="@+id/tx_row_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingVertical="4dp"
        android:visibility="gone">

        <TextView
            android:id="@+id/tx1_icon"
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:gravity="center"
            android:textSize="10sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tx1_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/white"
                android:textSize="12sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tx1_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#8E8E93"
                android:textSize="10sp" />

        </LinearLayout>

        <TextView
            android:id="@+id/tx1_amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:textStyle="bold" />

    </LinearLayout>

    <!-- Row 2 -->
    <LinearLayout
        android:id="@+id/tx_row_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingVertical="4dp"
        android:visibility="gone">

        <TextView
            android:id="@+id/tx2_icon"
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:gravity="center"
            android:textSize="10sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tx2_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/white"
                android:textSize="12sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tx2_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#8E8E93"
                android:textSize="10sp" />

        </LinearLayout>

        <TextView
            android:id="@+id/tx2_amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:textStyle="bold" />

    </LinearLayout>

    <!-- Row 3 -->
    <LinearLayout
        android:id="@+id/tx_row_3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingVertical="4dp"
        android:visibility="gone">

        <TextView
            android:id="@+id/tx3_icon"
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:gravity="center"
            android:textSize="10sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tx3_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/white"
                android:textSize="12sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tx3_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#8E8E93"
                android:textSize="10sp" />

        </LinearLayout>

        <TextView
            android:id="@+id/tx3_amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:textStyle="bold" />

    </LinearLayout>

    <!-- No transactions placeholder -->
    <TextView
        android:id="@+id/wallet_no_tx"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center"
        android:text="No recent transactions"
        android:textColor="#8E8E93"
        android:textSize="11sp"
        android:visibility="gone" />

</LinearLayout>
