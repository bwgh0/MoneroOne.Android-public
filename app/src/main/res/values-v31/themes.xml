<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Theme.MoneroOne" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary brand color -->
        <item name="colorPrimary">@color/monero_orange</item>
        <item name="colorPrimaryDark">@color/monero_orange_dark</item>
        <item name="colorAccent">@color/monero_orange</item>

        <!-- Status bar -->
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
        <item name="android:windowLightStatusBar">true</item>

        <!-- Edge to edge -->
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>

        <!-- Android 12+ Splash Screen -->
        <item name="android:windowSplashScreenBackground">@color/background_light</item>
        <item name="android:windowSplashScreenAnimatedIcon">@mipmap/ic_launcher_foreground</item>
        <item name="android:windowSplashScreenIconBackgroundColor">@color/background_light</item>
    </style>
</resources>
